{
    "extends": "../.eslintrc",
    "parserOptions": {
        "ecmaFeatures": {
            "defaultParams": true,
            "destructuring": true,
            "forOf": true,
            "generators": false,
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "plugins": [ "react" ],
    "rules": {
        "react/jsx-indent-props": [2, 4],
        "react/jsx-indent": [2, 4],
        "react/no-unused-prop-types": [2, { "skipShapeProps": true }],
        "jsx-a11y/anchor-has-content": [0]
    },
    "env": {
        "browser": true
    }
}